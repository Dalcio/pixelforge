{
  "name": "fluximage",
  "version": "1.0.0",
  "private": true,
  "description": "Real-time image processing system with monorepo architecture",
  "scripts": {
    "dev": "node scripts/start-all-dev.js",
    "build": "pnpm -r build",
    "test": "pnpm test:api && pnpm test:worker && pnpm test:utils && pnpm test:web",
    "test:api": "pnpm --filter @fluximage/api test",
    "test:worker": "pnpm --filter @fluximage/worker test",
    "test:utils": "pnpm --filter @fluximage/utils test",
    "test:web": "pnpm --filter @fluximage/web test",
    "api:dev": "node scripts/start-with-redis.js api",
    "worker:dev": "node scripts/start-with-redis.js worker",
    "web:dev": "pnpm --filter @fluximage/web dev",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "ioredis": "^5.3.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
